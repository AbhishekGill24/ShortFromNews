<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="12dp"
        card_view:cardCornerRadius="8dp"
        android:layout_marginTop="-8dp"
        card_view:cardElevation="10dp"
        card_view:cardMaxElevation="10dp"
        android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintBottom_toTopOf="@id/title"
        card_view:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingHorizontal="18dp"
        android:lineSpacingExtra="3sp"
        tools:text="BCCI asks cricket boards to give them money as  koh"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#212121"
        card_view:layout_constraintTop_toBottomOf="@id/image"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintBottom_toTopOf="@id/content"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/content"
        android:paddingHorizontal="18dp"
        android:paddingBottom="12dp"
        android:lineSpacingExtra="3sp"
        android:paddingTop="6dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        tools:text="BCCI asks cricket boards to give them money as  koh"
        card_view:layout_constraintTop_toBottomOf="@id/title"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"


        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:paddingTop="3dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_baseline_share_24"
                android:background="@color/white"
                android:text="Share"
                android:textAllCaps="false"
                android:id="@+id/shareButton"
                android:drawablePadding="2dp"
                android:layout_weight="1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_baseline_bookmark_24"
                android:background="@color/white"
                android:text="Bookmark"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:id="@+id/bookmarkButton"
                android:drawablePadding="2dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_baseline_open_in_new_24"
                android:background="@color/white"
                android:text="Read Full Story"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:id="@+id/btm"
                android:drawablePadding="2dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

